<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Login</h2>
      <form class="form login-form" method="POST" action="/login">
        <div class="mb-3">
          <label for="userName-login" class="form-label">User Name:</label>
          <input class="form-control" type="text" id="email-login" name="uerName" required />
        </div>
        <div class="mb-3">
          <label for="password-login" class="form-label">Password:</label>
          <input class="form-control" type="password" id="password-login" name="password" required />
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
        <p class="mt-3">Don't have an account? <a href="/signup">Sign up</a></p>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>