<section class="container mt-5">
    <h1 class="mb-4">Messages</h1>
    <p>Send a message to a friend</p>
    <form id="message-form" class="mb-5">
        <div class="form-group mb-3">
            <label for="recipient" class="form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient" name="recipient" required>
        </div>
        <div class="form-group mb-3">
            <label for="content" class="form-label">Message:</label>
            <textarea class="form-control" id="content" name="content" required rows="3"></textarea>
        </div>
        <button id="send-message" class="btn btn-primary">Send</button>
    </form>

    <div class="mt-4">
        <h2>Your Messages</h2>
        <ul class="list-group">
            {{#each messages}}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">{{this.senderName}}</div>
                    {{this.message}}
                    <div><small>{{format_date this.createdAt}}</small></div>
                </div>
                <button class="btn btn-outline-primary reply-button" data-sender-userName="{{this.senderName}}">Reply</button>
                <div class="reply-input hidden mt-2">
                    <textarea class="form-control hidden" id="reply-message" placeholder="Add a reply"></textarea>
                    <button class="btn btn-primary hidden send-reply mt-2" data-sender-userName="{{../senderName}}">Send</button>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="mt-4">
        <h2>Notifications</h2>
        <ul class="list-group">
            {{#each notifications}}
            <li class="list-group-item">
                <strong>{{this.senderName}}:</strong> {{this.body}}
                <small>{{format_date this.createdAt}}</small>
            </li>
            {{/each}}
        </ul>
    </div>
</section>

<script src="/js/messages.js"></script>
