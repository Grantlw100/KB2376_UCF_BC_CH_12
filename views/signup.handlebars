<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Signup</h2>
            <form class="signup-form" >
                <div class="mb-3">
                    <label for="name-signup" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name-signup" name="name" placeholder="Your desired name" required />
                </div>
                <div class="mb-3">
                    <label for="username-signup" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username-signup" name="username" placeholder="Your username" required />
                </div>
                <div class="mb-3">
                    <label for="picture-signup" class="form-label">Profile picture:</label>
                    <input type="file" class="form-control" id="picture-signup" name="picture" />
                </div>
                <div class="mb-3">
                    <label for="email-signup" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email-signup" name="email" placeholder="you@example.com" required />
                </div>
                <div class="mb-3">
                    <label for="password-signup" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password-signup" name="password" placeholder="Create a password" required />
                </div>
                <div class="mb-3">
                    <label for="bio-signup" class="form-label">Would you like to add a bio?</label>
                    <textarea class="form-control" id="bio-signup" name="bio" placeholder="Add a bio"></textarea>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
                <p class="mt-3">Already have an account? <a href="/login" class="link-primary">Login</a></p>
            </form>
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>
