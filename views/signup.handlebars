
<div class="col-md-6 signup-container">
    <h2>Signup</h2>

    <form class="form signup-form" action="/signup" method="POST">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" name="name" placeholder="Your desired name" required />
      </div>
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" name="username" placeholder="Your username" required />
      </div>
    <div class="form-group">
        <label for="picture-signup">Profile picture:</label>
        <input class="form-input" type="file" id="picture-signup" name="picture" placeholder="Your picture"  />
        </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="email" id="email-signup" name="email" placeholder="you@example.com" required />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" name="password" placeholder="Create a password" required />
      </div>
      <div class="form-group">
        <label for='bio-signup'>Would you like to add a bio?</label>
        <textarea class="form-input" id="bio-signup" name="bio" placeholder="Add a bio" ></textarea>
        </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
      
      <div class="form-group">
        <p>Already have an account? <a href="/login">Login</a></p>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>
