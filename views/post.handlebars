<div class="container mt-5">
    <h1>Create New Post</h1>
    <form class="post-form" action="/posts/create" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter your post title" required />
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content:</label>
            <textarea class="form-control" id="content" name="content" rows="4" placeholder="What's on your mind?" required></textarea>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">Create</button>
        </div>
    </form>
</div>

<script src="./js/post.js"></script>
